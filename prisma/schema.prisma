generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Category {
  id    String @id @default(cuid())
  name  String @unique
  items Item[]
}

model Item {
  id            String   @id @default(cuid())
  name          String
  weightGrams   Int
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id])
  isCarryOnOk   Boolean  @default(true)
  isCheckedOk   Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model LimitPreset {
  id              String   @id @default(cuid())
  name            String
  carryOnMaxGrams Int?
  checkedMaxGrams Int?
  note            String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
